<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deepspace.hab">

    <application
        android:name=".Stratofox"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".screens.welcome.WelcomeActivity"
            android:exported="true" />
        <activity
            android:name=".screens.lesson.LessonActivity"
            android:exported="true" />
        <activity
            android:name=".screens.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.signin.SigninActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" />
    </application>

</manifest>