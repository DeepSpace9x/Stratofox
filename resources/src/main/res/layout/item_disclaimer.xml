<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="12dp"
        android:src="@drawable/ic_bullet"/>

    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GreyWhite.TextSize16.Regular"
        android:textColor="@color/WhiteDisclaimer"
        android:text="The experiments in this application is based upon the research conducted by team at StratoFox and meant to be considered as a personal guide or standalone reference for learning about high altitude balloons."/>

</LinearLayout>